<%= form_for @user do |f| %>
  <%= f.label :email %><br>
  <%= f.text_field :email, placeholder: "example@example.com" %><br>
  <%= f.label :username %><br>
  <%= f.text_field :username, placeholder: "Your user name" %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.submit "Submit" %>
<% end %>
